<h1>New Post</h1>
<%= form_with model: @post do |f| %>
  <% f.hidden_field :user_id, value: "${@user.id}" %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Create" %>
  </div>
<% end %>